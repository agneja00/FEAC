{
  "name": "home-service-app",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "b": "pnpm --filter home-service-backend",
    "f": "pnpm --filter home-service-frontend",
    "dev": "concurrently \"pnpm --filter home-service-backend dev\" \"pnpm --filter home-service-frontend dev\"",
    "start": "cd home-service-full-stack/backend && pnpm install && pnpm build && pnpm start",
    "types": "concurrently \"pnpm b types\" \"pnpm f types\"",
    "lint": "concurrently \"pnpm b lint\" \"pnpm f lint\"",
    "prettify": "pnpm -r --parallel prettify",
    "heroku-postbuild": "cd home-service-full-stack/backend && pnpm install && pnpm build && cd ../frontend && pnpm install && pnpm build",
    "deploy": "git push heroku main",
    "prepare": "husky install"
  },
  "engines": {
    "node": "22.19.0",
    "pnpm": "10.17.1"
  },
  "packageManager": "pnpm@10.17.1",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.2"
  },
  "overrides": {
    "@types/multer>@types/express": "^4.17.21"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,md,css,scss,yml,yaml}": [
      "pnpm exec prettier --write"
    ],
    "*.{js,ts,tsx,jsx}": [
      "pnpm exec eslint --fix"
    ]
  }
}
